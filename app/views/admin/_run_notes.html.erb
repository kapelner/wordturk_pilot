<h3>Our notes on this run</h3>

<div style="text-align:center;">
  <textarea id="notes" style="width:500px; height:70px;"><%= @br.notes %></textarea><br />
  <input type="button" value=" Save " id="save_button" onclick="SaveNotes();">
</div>
<script type="text/javascript">
  function SaveNotes(version){
    $('save_button').disabled = true;
    var r = new Ajax.Request(
      '/admin/update_survey_notes',
      {
        method: 'post',
        parameters: 'id=<%= @br.id %>&notes=' + encodeURIComponent($('notes').value),
        onComplete: function(response){
          $('save_button').disabled = false;
        }
      }
    );
  }
</script>